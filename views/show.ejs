<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../public/css/star.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <h1>Displaying A Particular Porduct</h1>
    <section>
        <div class="col-6 border">
            <h1><%=foundProduct.name%></h1>
            <img src="<%=foundProduct.img%>" alt="" height="50%" width="50%">
            <h2><%=foundProduct.price%></h2>
            <p><%=foundProduct.desc%></p>
        </div>

        <div class="col-6 border">
            <h1>Rating Form</h1>
            <form action="/products/<%=foundProduct._id%>/rating" method="POST">
                <label for="star">Rating : </label>
                <!-- <input type="range" min="0" max="5" name="rating" id="star"> -->
                <fieldset class="starability-basic">
                    <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="rating" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="rating" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="rating" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="rating" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="rating" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>

                <label for="text">Comment</label>
                <textarea name="comment" id="text" rows="3"></textarea>

                <button type="submit">Add Review</button>

            </form>
        </div>

        <div>
            <%for(let review of foundProduct.reviews){%>
                <!-- <h4>Rating : <%=review.rating%></h4> -->
                <h3 class="starability-result" data-rating="<%=review.rating%>">
                    Rated:  <%=review.rating%>stars
                </h3>
                <h4>Comment : <%=review.comment%></h4>
            <%}%>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>